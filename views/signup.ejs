<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4" style="margin-top: 13%;">
			<h3 style="text-align: center; margin-bottom: 30px;">Sign up for OpenFirebase</h3>
			<div class="panel panel-default">
			  	<div class="panel-body">
			   		<form role="form" id="signupform">
                        <div class="form-group">
                        	<label for="username">Username</label>
                            <input type="username" name="username" id="username" class="form-control" placeholder="Pick a Username" style="height: 40px; margin-bottom: 5px;"/>
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" name="email" class="form-control" id="email" placeholder="Your Email" style="height: 40px; margin-bottom: 5px;"/>
                        </div>
                        <div class="form-group"`>
                            <label for="password">Password</label>
                            <input type="password" name="password" class="form-control" id="password" placeholder="Create a password" style="height: 40px; margin-bottom: 5px;"/>
                        </div>
                        <button id="signup" class="btn btn-block btn-success" style="height: 40px;">Sign up for Open Firebase</button>
                    </form>
			    </div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<div class="panel panel-default">
				<div class="panel-body" style="background-color: #F5F5F5; text-align: center;">
					Already have an Account? <a href="/signin">Sign In.</a>
				</div>
			</div>
		</div>
	</div>
</div>
<script>
$("#signupform").submit(function(){
	event.preventDefault();
	var username = $("#username").val();
	var email = $("#email").val();
	var password = $("#password").val();

	$.ajax({
		method: "POST",
		url: "/user/create",
		data: {
			username: username,
			email: email,
			password: password
		}
	}).done(function(msg){
		console.log(msg);
		if(msg){
			//window.location.href = "/dashboard";
		}
	});
});
</script>
